<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/temizle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="140dp"
        android:text="C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sifir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bir" />

    <Button
        android:id="@+id/esittir"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="140dp"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bolum"
        app:layout_constraintStart_toEndOf="@+id/sifir"
        app:layout_constraintTop_toBottomOf="@+id/uc" />

    <Button
        android:id="@+id/bes"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/iki"
        app:layout_constraintEnd_toStartOf="@+id/uc"
        app:layout_constraintStart_toEndOf="@+id/bir"
        app:layout_constraintTop_toBottomOf="@+id/sekiz" />

    <Button
        android:id="@+id/sifir"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="140dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/esittir"
        app:layout_constraintStart_toEndOf="@+id/temizle"
        app:layout_constraintTop_toBottomOf="@+id/iki" />

    <Button
        android:id="@+id/bir"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/temizle"
        app:layout_constraintEnd_toStartOf="@+id/sifir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dort" />

    <Button
        android:id="@+id/sekiz"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bes"
        app:layout_constraintEnd_toStartOf="@+id/dokuz"
        app:layout_constraintStart_toEndOf="@+id/yedi"
        app:layout_constraintTop_toBottomOf="@+id/sonuc" />

    <Button
        android:id="@+id/iki"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sifir"
        app:layout_constraintEnd_toStartOf="@+id/uc"
        app:layout_constraintStart_toEndOf="@+id/bir"
        app:layout_constraintTop_toBottomOf="@+id/bes" />

    <Button
        android:id="@+id/dort"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bir"
        app:layout_constraintEnd_toStartOf="@+id/bes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yedi" />

    <Button
        android:id="@+id/yedi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/dort"
        app:layout_constraintEnd_toStartOf="@+id/sekiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonuc" />

    <Button
        android:id="@+id/uc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/esittir"
        app:layout_constraintEnd_toStartOf="@+id/bolum"
        app:layout_constraintStart_toEndOf="@+id/iki"
        app:layout_constraintTop_toBottomOf="@+id/alti" />

    <Button
        android:id="@+id/dokuz"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/alti"
        app:layout_constraintEnd_toStartOf="@+id/toplam"
        app:layout_constraintStart_toEndOf="@+id/sekiz"
        app:layout_constraintTop_toBottomOf="@+id/sonuc" />

    <Button
        android:id="@+id/alti"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/uc"
        app:layout_constraintEnd_toStartOf="@+id/carpim"
        app:layout_constraintStart_toEndOf="@+id/bes"
        app:layout_constraintTop_toBottomOf="@+id/dokuz" />

    <EditText
        android:id="@+id/sonuc"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toplam"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonuc" />

    <Button
        android:id="@+id/bolum"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="154dp"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carpim" />

    <Button
        android:id="@+id/carpim"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="*"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bolum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fark" />

    <Button
        android:id="@+id/fark"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/carpim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toplam" />

</androidx.constraintlayout.widget.ConstraintLayout>